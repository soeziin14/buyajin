<%include ../partials/blog_header%>
<link href="https://fonts.googleapis.com/css?family=Oswald" rel="stylesheet">
<link href="/stylesheets/blog.css" type="text/css" rel="stylesheet" />

<div class="container header">
    <div class="row">
        <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
            <div class="heading">
                <h1>Jin's Blog</h1>
                <hr>
                <h3 style="color:white;">Web Dev + Problem Solving.</h3>
            </div>
        </div>
    </div>
</div>
<div id="new_button">
    <a href="/blog/new">
        <img src="../images/blog/compose.png" alt="">
    </a>
</div>
<div class="container">
    <div class="row">
        <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
            <div class="post_header">
                <h1>Latest Blogging.</h1>
        </div>
    </div>
</div>
    <% if (posts.length == 0) {%>
        <div class="container no_posts text-center">
            <div class="row">
                <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
                        <h1>No BLOGGINGS YET =(</h1>
                </div>
            </div>
        </div>
    <%}%>
    <% posts.forEach(function(post){ %>
        <div class="container post_container">
            <div class="row">
                <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
                    <div class="post">
                        <h1><%= post.title%></h1>
                        <h4><%= post.exp%></h4>
                        <hr>
                        <h4><%= post.des%></h4>
                    </div>
                    <div id="show_button" style="margin-top: 15px;">
                        <a href="/blog/<%= post._id %>" id="show_button" class="btn btn-primary">More Info</a>
                    </div>
                </div>
            </div>
        </div>
    <% }); %>
<%include ../partials/footer%>