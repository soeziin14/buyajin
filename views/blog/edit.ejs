<% include ../partials/blog_header %>
<link href="/stylesheets/new_form.css" type="text/css" rel="stylesheet" />
<div class="container new_form_header">
    <h1 style="text-align: center">Edit <%= post.title%></h1>
    <div style="margin: 25px auto;">
        <form action="/blog/<%= post._id %>?_method=PUT" method="POST">
            <div class="form-group" id="title">
                <input class="form-control" type="text" name="post[title]" value="<%= post.title %>">
            </div>
            <div class="form-group" id="description">
                <input rows="5" name="post[exp]" value="<%= post.exp %>">
            </div>
            <div class="form-group" id="description">
                <input rows="5" name="post[desc]" value="<%= post.desc %>">
            </div>
            <div class="form-group row">
                <div class="col-lg-6" id="code">
                    <textarea rows="20" name="post[code_before]" value="<%= post.code_before %>"></textarea>
                </div>
                <div class="col-lg-6" id="code">
                    <textarea rows="20" name="post[code_after]" value="<%= post.after %>"></textarea>
                </div>
            </div>
            <div id="buttons">
                <div class="form-group">
                    <button id="button" class="btn btn-lg btn-primary btn-block">Submit</button>
                </div>
            </div>
        </form>
        <a href="/blog"><button id="back_button" class="btn btn-lg btn-primary btn-block"><- Back</button></a>
    </div>
</div>
<% include ../partials/footer %>