<% include ../partials/blog_header %>
<link href="/stylesheets/new_form.css" type="text/css" rel="stylesheet" />
<div class="container new_form_header">
    <h1 style="text-align: center">Edit <%= post.title%></h1>
    <div style="margin: 25px auto;">
        <form action="/blog/<%= post._id %>?_method=PUT" method="POST">
            <div class="form-group" id="title">
                <input class="form-control" type="text" name="title" value="<%= post.title %>">
            </div>
            <div class="form-group" id="description">
                <textarea rows="5" name="exp" value="<%= post.exp %>"><%= post.exp %></textarea>
            </div>

            <% post.img.forEach(function(img, index) { console.log("post: ", post, post.title)%>
            <div class="row">
                <div class="form-group col-lg-6 col-md-6">
                    <img class="img-responsive" name="img" src="<%= img%>" alt="">
                </div>
                <div class="form-group col-lg-6 col-md-6 comment">
                    <textarea rows="10" name="comment"><%= post.comment[index] %></textarea>
                </div>
            </div>
            <p style="font-style:italic; font-size: 15px;">
                posted <%= post.createdAt.toDateString()%>
            </p>
            <hr>
            <% });%>

            <div id="buttons">
                <div class="form-group">
                    <button id="button" class="btn btn-lg btn-primary btn-block">Submit</button>
                </div>
            </div>
        </form>
        <a href="/blog"><button id="back_button" class="btn btn-lg btn-primary btn-block">Back</button></a>
    </div>
</div>
<% include ../partials/footer %>